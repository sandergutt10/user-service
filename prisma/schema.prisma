generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  admin
  user
}

model User {
  id           String   @id @default(uuid())
  fullName     String
  birthDate    DateTime
  email        String   @unique
  passwordHash String
  role         UserRole @default(user)
  isActive     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
